# All we need is the gem source, the jekyll gem, and the jekyll-compose gem for
# support drafting and publishing posts.
source "https://rubygems.org"
gem "jekyll", "~> 4.0.0"
gem 'jekyll-compose', group: [:jekyll_plugins]